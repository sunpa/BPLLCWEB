@model BPLLCWEB.Domain.Entities.ValidateUser

@{
    ViewBag.Title = "Forgotten Password";
    string message = ViewBag.Message;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<fieldset id="navpagefieldset">

    <div class="navHeader">
        Retrieve Password
    </div>

    <div id="navBody">

        <table>

            @*not template begin*@

            <tr>
                <td style="width: 620px">

                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary()

                        <fieldset id="contactfieldset">
                            <legend>&nbsp;&nbsp;<strong>Step 1</strong>&nbsp;&nbsp;</legend>
                            <br />
                            Please enter your username OR email address to continue.
                            <br />

                            <table>
                                <tr>
                                    <td>
                                        <table>
                                            <tr><td colspan="2" height="10"></td></tr>
                                            <tr>
                                                <td colspan="2"><font color="red">@message</font></td>
                                            </tr>
                                            <tr style="vertical-align: top">
                                                <td width="120px">
                                                    <div class="editor-label">
                                                        <strong>Username:</strong>
                                                    </div>
                                                </td>
                                                <td>
                                                    @Html.TextBox("UserName", null, new { style = "width: 280px", id = "Username" })
                                                </td>
                                            </tr>
                                            <tr><td colspan="2"><br />OR</td></tr>
                                            <tr>
                                                <td>
                                                    <div class="editor-label">
                                                        <strong>Email Address:</strong>
                                                    </div>
                                                </td>
                                                <td>
                                                    @Html.TextBox("EmailAdd", null, new { style = "width: 280px" })
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                <tr><td height="10"></td></tr>
                                <tr>
                                    <td>
                                        <div class="editor-label">
                                            <input type="submit" value="Continue" class="boxsubmit">
                                        </div>

                                    </td>
                                </tr>

                            </table>

                        </fieldset>

                    }

                </td>

            </tr>


            @*not template end*@

        </table>

    </div>

</fieldset>



<script type="text/javascript">
    $(document).ready(function () {

        $(function() {
            $("#Username").focus();
        });
    });
</script>
