@model BPLLCWEB.Domain.Entities.ParticipantInfo

@{
    ViewBag.Title = "Participation Sign Up";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string successful = ViewBag.Successful;
    string wrongnumber = ViewBag.WrongNumber;    
}

@using BPLLCWEB.Helpers

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<fieldset id="navpagefieldset">

    <div class="navHeader">
        Sign-up / Log-in
    </div>

    <div id="navBody">

        <table>

            @*not template begin*@

            <tr>
                <td style="width: 620px">

                    <strong>Not a Partner yet?</strong><br />

                    If you would like to become a Business Partners participating credit union,
                    simply complete and submit the request form below and a Business Partners
                    Representative will contact you.

                    <br /><br />

                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary()

                        <fieldset id="contactfieldset">
                            <legend>&nbsp;&nbsp;<strong>Participant Request Form</strong>&nbsp;&nbsp;</legend>

                            <table>
                                <tr>
                                    <td>
                                        <table>
                                            <tr><td colspan="2" height="10"></td></tr>
                                            <tr>
                                                <td colspan="2"><font color="red">@successful</font></td>
                                            </tr>
                                            <tr style="vertical-align: top">
                                                <td width="180px">
                                                    <div class="editor-label">
                                                        <strong><font color="red">*</font>&nbsp;Credit Union Name:</strong>
                                                    </div>
                                                </td>
                                                <td>
                                                    @Html.TextBoxFor(c => c.CreditunionName, new { style = "width: 280px", id = "firsttextbox" })
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>
                                                    <div class="editor-label">
                                                        <strong><font color="red">*</font>&nbsp;Contact Name:</strong>
                                                    </div>
                                                </td>
                                                <td>
                                                    @Html.TextBoxFor(c => c.ContactName, new { style = "width: 280px" })
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>
                                                    <div class="editor-label">
                                                        <strong><font color="red">*</font>&nbsp;Phone Number:</strong>
                                                    </div>
                                                </td>
                                                <td>
                                                    @Html.TextBoxFor(c => c.PhoneNumber, new { style = "width: 280px" })
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>
                                                    <div class="editor-label">
                                                        <strong><font color="red">*</font>&nbsp;Email Address:</strong>
                                                    </div>
                                                </td>
                                                <td>
                                                    @Html.TextBoxFor(c => c.EmailAddress, new { style = "width: 280px" })
                                                </td>
                                            </tr>

                                            <tr>
                                                <td colspan="2">
                                                    <div class="editor-label">
                                                        <strong>I'm interested in:</strong><br />
                                                        
                                                        @Html.CheckBox("CRE") &nbsp;Commercial Real Estate<br />
                                                        @Html.CheckBox("SBS") &nbsp;Small Business Services<br /> 
                                                        @Html.CheckBox("SBA") &nbsp;Small Business Administration<br /> 
                                                        @Html.CheckBox("MBL") &nbsp;Member Business Lending<br />
                                                    </div>
                                                </td>
                                            </tr>

                                            <tr>
                                                <td colspan="2">
                                                    <div class="editor-label">
                                                        <strong>Please enter the number: </strong>@Html.CaptchaCalculationAnswer(15, "ArithmeticValue")
                                                        @Html.TextBox("ArithmeticValue")
                                                    </div>
                                                </td>
                                            </tr>

                                            <tr>
                                                <td colspan="2">
                                                    <font color="red">@wrongnumber</font>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <div class="editor-label">
                                            <input type="submit" value="Submit" class="boxsubmit">
                                        </div>

                                    </td>
                                </tr>

                            </table>

                        </fieldset>
                    }


                    <br />
                    If you prefer, you can call us directly at (800) 894-8328.

                </td>

            </tr>


            @*not template end*@

        </table>

    </div>

</fieldset>

<script type="text/javascript">
    $(document).ready(function () {

        $(function () {
            $('#firsttextbox').focus();
        });
    });
</script>